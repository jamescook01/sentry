#!/bin/sh

if [ "x$RIGIDSEARCH_SECRET" == "x" ]; then
  echo "RIGIDSEARCH_SECRET not exported; aborting"
  exit 1
fi

cd build/dirhtml
find . -name '*.html' | zip -@ -9 ../search-files.zip
curl -i https://rigidsearch.getsentry.net/api/index/sources -XPUT -F archive=@../search-files.zip -F secret="${RIGIDSEARCH_SECRET}" -F config=@../../search-config.json

