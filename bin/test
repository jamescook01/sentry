#!/bin/bash
# usage: bin/test
#
# Run tests

rm -rf _site
rm -rf .jekyll-cache

./node_modules/.bin/webpack --config ./config/webpack.config.prod.js

yarn
(bundle check || bundle install) && JEKYLL_ENV=production bundle exec jekyll build --config _config.yml,_config.test.yml

./node_modules/.bin/jest $@
